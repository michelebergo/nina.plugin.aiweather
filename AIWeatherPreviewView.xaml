<UserControl x:Class="AIWeather.AIWeatherPreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AIWeather"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <local:RunningToTextConverter x:Key="RunningToTextConverter"/>
        <local:RunningToColorConverter x:Key="RunningToColorConverter"/>
        <local:FirstNonNullConverter x:Key="FirstNonNullConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Compact DataGrid/editor styling (RTSP Client-like) -->
        <Style x:Key="CompactCellTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="CompactCellPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CompactCellComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="2,0"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CompactDataGridStyle" TargetType="DataGrid">
            <Setter Property="RowHeight" Value="26"/>
            <Setter Property="ColumnHeaderHeight" Value="26"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="CompactPlayStopButtonStyle" TargetType="Button">
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="MinWidth" Value="64"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Simple RTSP-Client-like glyphs -->
        <Geometry x:Key="PlayTriangleGeometry">M 0 0 L 0 10 L 8 5 Z</Geometry>
        <Geometry x:Key="StopSquareGeometry">M 0 0 H 8 V 8 H 0 Z</Geometry>

        <Style x:Key="CompactIconButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="28"/>
            <Setter Property="MinHeight" Value="22"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PlayIconButtonStyle" TargetType="Button" BasedOn="{StaticResource CompactIconButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <Viewbox Width="14" Height="14" Stretch="Uniform">
                                <Path Data="{StaticResource PlayTriangleGeometry}" Fill="{DynamicResource PrimaryBrush}"/>
                            </Viewbox>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StopIconButtonStyle" TargetType="Button" BasedOn="{StaticResource CompactIconButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <Viewbox Width="14" Height="14" Stretch="Uniform">
                                <Path Data="{StaticResource StopSquareGeometry}" Fill="{DynamicResource PrimaryBrush}"/>
                            </Viewbox>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Video/Image Panel (inherit N.I.N.A. theme) -->
        <Grid Grid.Row="0" x:Name="MainVideoPanel" Background="{x:Null}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Main Image Display - Left Side (like RTSP video player) -->
            <Border Grid.Column="0" Background="{x:Null}" Margin="5">
                <Grid x:Name="VideoContainer" Background="Transparent" ClipToBounds="True">
                    <!-- Video Panel for HwndHost (RTSP mode only) -->
                    <Grid x:Name="VideoPanel"
                            Visibility="{Binding IsRtspMode, Converter={StaticResource BoolToVisibility}}"
                            Background="Transparent"
                            ClipToBounds="True"
                            SizeChanged="VideoPanel_SizeChanged"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>
                    
                    <!-- Camera Image (shows last captured image for non-RTSP modes or fallback) -->
                    <Image x:Name="CameraImage" 
                           Source="{Binding CurrentImage}" 
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    
                </Grid>
            </Border>
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext"/>
            
            <!-- Right Panel - Activity Log & Weather Info -->
            <Border Grid.Column="2" Background="{x:Null}" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Weather Status Panel -->
                    <Border Grid.Row="0" Background="{x:Null}" BorderThickness="0,0,0,1" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="{Binding SafetyStatus, Mode=OneWay}" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Text="{Binding WeatherCondition, Mode=OneWay}" FontSize="12" Foreground="{DynamicResource PrimaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="2" FontSize="10" Foreground="{DynamicResource PrimaryBrush}" HorizontalAlignment="Center">
                                <Run Text="Cloud: "/>
                                <Run Text="{Binding CloudCoverage, Mode=OneWay, StringFormat={}{0:F0}%}"/>
                                <Run Text=" | Confidence: "/>
                                <Run Text="{Binding Confidence, Mode=OneWay, StringFormat={}{0:F0}%}"/>
                            </TextBlock>

                            <TextBlock Grid.Row="3" Text="{Binding AiSettingsSummary, Mode=OneWay}" FontSize="9" Foreground="{DynamicResource PrimaryBrush}" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Activity Log -->
                    <Border Grid.Row="1" Background="{x:Null}" Padding="10,5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Activity Log" FontWeight="Bold" FontSize="12" Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,0,5"/>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <TextBox Text="{Binding ActivityLog, Mode=OneWay}" 
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         FontFamily="Consolas"
                                         FontSize="10"
                                     Foreground="{DynamicResource PrimaryBrush}"/>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                    
                    <!-- Analysis Info -->
                    <Border Grid.Row="2" Background="{x:Null}" BorderThickness="0,1,0,0" Padding="10">
                        <StackPanel>
                            <TextBlock Text="{Binding Description, Mode=OneWay}" FontSize="10" Foreground="{DynamicResource PrimaryBrush}" TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock FontSize="9" Foreground="{DynamicResource PrimaryBrush}">
                                <Run Text="Last update: "/>
                                <Run Text="{Binding LastUpdate, Mode=OneWay, StringFormat={}{0:HH:mm:ss}}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Camera Sources DataGrid (for all modes) -->
        <Border Grid.Row="1" Background="{x:Null}" BorderThickness="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Camera sources" FontWeight="Bold" FontSize="13" Margin="10,8,10,5" Foreground="{DynamicResource PrimaryBrush}"/>
                
                <!-- DataGrid for URL modes (RTSP and HTTP) -->
                <DataGrid Grid.Row="1" 
                          x:Name="SourcesDataGridUrl"
                          ItemsSource="{Binding Sources}"
                          Visibility="{Binding IsUrlMode, Converter={StaticResource BoolToVisibility}}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="{x:Null}"
                          RowBackground="{x:Null}"
                          AlternatingRowBackground="{x:Null}"
                          Foreground="{DynamicResource PrimaryBrush}"
                          BorderThickness="0"
                          Margin="10,0,10,5"
                          MinHeight="80"
                          MaxHeight="150"
                          Style="{StaticResource CompactDataGridStyle}">
                    
                    <DataGrid.Columns>
                        <!-- Username - hidden in FolderWatch mode -->
                        <DataGridTextColumn Binding="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="Username" Visibility="{Binding DataContext.IsUrlMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                            </DataGridTextColumn.Header>
                            <DataGridTextColumn.Width>
                                <Binding Path="DataContext.IsUrlMode" RelativeSource="{RelativeSource AncestorType=UserControl}">
                                    <Binding.Converter>
                                        <local:BoolToGridLengthConverter TrueValue="120" FalseValue="0"/>
                                    </Binding.Converter>
                                </Binding>
                            </DataGridTextColumn.Width>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox" BasedOn="{StaticResource CompactCellTextBoxStyle}"/>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Password - hidden in FolderWatch mode -->
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="Password" Visibility="{Binding DataContext.IsUrlMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.Width>
                                <Binding Path="DataContext.IsUrlMode" RelativeSource="{RelativeSource AncestorType=UserControl}">
                                    <Binding.Converter>
                                        <local:BoolToGridLengthConverter TrueValue="120" FalseValue="0"/>
                                    </Binding.Converter>
                                </Binding>
                            </DataGridTemplateColumn.Width>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="••••••" VerticalAlignment="Center" Padding="4,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <PasswordBox x:Name="PasswordBox" 
                                                 PasswordChanged="PasswordBox_PasswordChanged" 
                                                 Loaded="PasswordBox_Loaded" 
                                                 Style="{StaticResource CompactCellPasswordBoxStyle}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Protocol - only visible in RTSP/HTTP modes, hidden in FolderWatch -->
                        <DataGridComboBoxColumn>
                            <DataGridComboBoxColumn.Header>
                                <TextBlock Text="Protocol" Visibility="{Binding DataContext.IsUrlMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}}"/>
                            </DataGridComboBoxColumn.Header>
                            <DataGridComboBoxColumn.Width>
                                <Binding Path="DataContext.IsUrlMode" RelativeSource="{RelativeSource AncestorType=UserControl}">
                                    <Binding.Converter>
                                        <local:BoolToGridLengthConverter TrueValue="100" FalseValue="0"/>
                                    </Binding.Converter>
                                </Binding>
                            </DataGridComboBoxColumn.Width>
                            <DataGridComboBoxColumn.ElementStyle>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource CompactCellComboBoxStyle}">
                                    <Setter Property="ItemsSource" Value="{Binding DataContext.Protocols, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    <Setter Property="SelectedItem" Value="{Binding Protocol, UpdateSourceTrigger=PropertyChanged}"/>
                                </Style>
                            </DataGridComboBoxColumn.ElementStyle>
                            <DataGridComboBoxColumn.EditingElementStyle>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource CompactCellComboBoxStyle}">
                                    <Setter Property="ItemsSource" Value="{Binding DataContext.Protocols, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    <Setter Property="SelectedItem" Value="{Binding Protocol, UpdateSourceTrigger=PropertyChanged}"/>
                                </Style>
                            </DataGridComboBoxColumn.EditingElementStyle>
                        </DataGridComboBoxColumn>
                        <DataGridTextColumn Width="*" Binding="{Binding MediaUrl, UpdateSourceTrigger=PropertyChanged}">
                            <DataGridTextColumn.Header>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Media URL"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.IsRtspMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                                    <Setter Property="Text" Value="Image URL"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataGridTextColumn.Header>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox" BasedOn="{StaticResource CompactCellTextBoxStyle}"/>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="" Width="44">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- RTSP mode: use StartStreamCommand -->
                                        <!-- RTSP mode: show Play when not running, Stop when running -->
                                        <Button Command="{Binding DataContext.StartStreamCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Margin="2,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PlayIconButtonStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding DataContext.IsRtspMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                                <Condition Binding="{Binding IsRunning}" Value="False"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Command="{Binding DataContext.StartStreamCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Margin="2,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource StopIconButtonStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding DataContext.IsRtspMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                                <Condition Binding="{Binding IsRunning}" Value="True"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <!-- Non-RTSP mode: use StartStopMonitoringCommand -->
                                        <!-- Play button for HTTP/Folder (visible when not running) -->
                                        <Button Command="{Binding DataContext.StartStopMonitoringCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Margin="2,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PlayIconButtonStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding DataContext.IsNonRtspMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                                <Condition Binding="{Binding IsRunning}" Value="False"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <!-- Stop button for HTTP/Folder (visible when running) -->
                                        <Button Command="{Binding DataContext.StartStopMonitoringCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Margin="2,0">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource StopIconButtonStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding DataContext.IsNonRtspMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                                <Condition Binding="{Binding IsRunning}" Value="True"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- DataGrid for Folder mode (only shows folder path) -->
                <DataGrid Grid.Row="1" 
                          x:Name="SourcesDataGridFolder"
                          ItemsSource="{Binding Sources}"
                          Visibility="{Binding IsFolderMode, Converter={StaticResource BoolToVisibility}}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="{x:Null}"
                          RowBackground="{x:Null}"
                          AlternatingRowBackground="{x:Null}"
                          Foreground="{DynamicResource PrimaryBrush}"
                          BorderThickness="0"
                          Margin="10,0,10,5"
                          MinHeight="80"
                          MaxHeight="150"
                          Style="{StaticResource CompactDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Folder Path" Binding="{Binding MediaUrl}" Width="*" IsReadOnly="False">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="4,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox" BasedOn="{StaticResource CompactCellTextBoxStyle}"/>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="" Width="44">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                        <Button Style="{StaticResource PlayIconButtonStyle}"
                                            Command="{Binding DataContext.StartStopMonitoringCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Margin="2,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,5,10,8">
                    <Button Content="+" Command="{Binding AddSourceCommand}" Width="30" Height="24" Margin="0,0,5,0" FontWeight="Bold" ToolTip="Add new camera source"/>
                    <Button Content="−" Command="{Binding DeleteSourceCommand}" Width="30" Height="24" FontWeight="Bold" ToolTip="Delete selected source">
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource FirstNonNullConverter}">
                                <Binding ElementName="SourcesDataGridUrl" Path="SelectedItem"/>
                                <Binding ElementName="SourcesDataGridFolder" Path="SelectedItem"/>
                            </MultiBinding>
                        </Button.CommandParameter>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
