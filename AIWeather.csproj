<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>AIWeather</RootNamespace>
    <AssemblyName>NINA.Plugin.AIWeather</AssemblyName>
    <AssemblyTitle>AI Weather</AssemblyTitle>
    <Description>AI-powered all-sky camera weather monitoring for NINA</Description>
    <Company></Company>
    <Product>NINA.Plugins</Product>
    <Copyright>Copyright Â© 2026</Copyright>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <PlatformTarget>x64</PlatformTarget>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PublishReadyToRun>false</PublishReadyToRun>
  </PropertyGroup>

  <ItemGroup>
