<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>AIWeather</RootNamespace>
    <AssemblyName>NINA.Plugin.AIWeather</AssemblyName>
    <AssemblyTitle>AI Weather</AssemblyTitle>
    <Description>AI-powered all-sky camera weather monitoring for NINA</Description>
    <Company></Company>
    <Product>NINA.Plugins</Product>
    <Copyright>Copyright © 2026</Copyright>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <PlatformTarget>x64</PlatformTarget>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PublishReadyToRun>false</PublishReadyToRun>
  </PropertyGroup>

  <ItemGroup>
    <!-- NINA SDK via NuGet – compile-time only; NINA itself provides these DLLs at runtime.
         ExcludeAssets="runtime" prevents them from being copied to the output (same as Private=False). -->
    <PackageReference Include="NINA.Plugin" Version="3.0.0.9001" ExcludeAssets="runtime" />
  </ItemGroup>

  <ItemGroup>
    <!-- RTSP Stream Capture -->
    <PackageReference Include="FFMediaToolkit" Version="4.4.0" />
    <PackageReference Include="Emgu.CV" Version="4.8.1.5350" />
    <PackageReference Include="Emgu.CV.runtime.windows" Version="4.8.1.5350" />
    
    <!-- LibVLCSharp for live RTSP video streaming -->
    <PackageReference Include="LibVLCSharp" Version="3.9.0" />
    <PackageReference Include="LibVLCSharp.WPF" Version="3.9.0" />
    <PackageReference Include="VideoLAN.LibVLC.Windows" Version="3.0.21" />
    
    <!-- AI/ML for image analysis -->
    <PackageReference Include="Microsoft.ML" Version="3.0.1" />
    <PackageReference Include="Microsoft.ML.ImageAnalytics" Version="3.0.1" />
    <PackageReference Include="Microsoft.ML.OnnxRuntime" Version="1.17.0" />
    <PackageReference Include="Microsoft.ML.OnnxRuntime.Managed" Version="1.17.0" />
    
    <!-- GitHub Models - Claude, OpenAI, Gemini via OpenAI SDK -->
    <PackageReference Include="OpenAI" Version="2.1.0" />
    <PackageReference Include="Azure.AI.OpenAI" Version="2.1.0" />
    
    <!-- Utilities -->
    <PackageReference Include="System.Drawing.Common" Version="8.0.2" />
    <PackageReference Include="System.Text.Json" Version="9.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Nito.AsyncEx" Version="5.1.2" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="ai_weather_logo.png" />
  </ItemGroup>

</Project>
